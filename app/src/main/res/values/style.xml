<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TravelMemories" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Light theme customization -->
    </style>

    <style name="Theme.TravelMemories.MySplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon_without_background</item>
        <item name="postSplashScreenTheme">@style/Theme.TravelMemories</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="CustomDialogStyle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>
</resources>